  <script is:inline>
    window.addEventListener('load', function() {
      const canvas = document.getElementById('circuitCanvas');
      if (!canvas) {
        console.error('Canvas not found');
        return;
      }
      
      const ctx = canvas.getContext('2d');

      function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        initDrops();
      }
      
      // Matrix configuration
      const fontSize = 14;
      let columns;
      let drops = [];
      
      // Characters for matrix effect
      const matrixChars = 'ÔΩ±ÔΩ≤ÔΩ≥ÔΩ¥ÔΩµÔΩ∂ÔΩ∑ÔΩ∏ÔΩπÔΩ∫ÔΩªÔΩºÔΩΩÔΩæÔΩøÔæÄÔæÅÔæÇÔæÉÔæÑÔæÖÔæÜÔæáÔæàÔæâÔæäÔæãÔæåÔæçÔæéÔæèÔæêÔæëÔæíÔæìÔæîÔæïÔæñÔæóÔæòÔæôÔæöÔæõÔæúÔΩ¶Ôæù0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ';
      
      function initDrops() {
        columns = Math.floor(canvas.width / fontSize);
        drops = [];
        // Initialize all drops at different heights
        for (let i = 0; i < columns; i++) {
          drops[i] = Math.floor(Math.random() * canvas.height / fontSize);
        }
      }
      
      resizeCanvas();
      window.addEventListener('resize', resizeCanvas);

      // Draw function
      let frameCount = 0;
      function draw() {
        frameCount++;
        
        // Black background with transparency for fade effect
        ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        ctx.font = fontSize + 'px monospace';
        
        // Only update drops every 3 frames for slower animation
        if (frameCount % 3 === 0) {
          for (let i = 0; i < drops.length; i++) {
            // Random character
            const char = matrixChars[Math.floor(Math.random() * matrixChars.length)];
            
            // Position
            const x = i * fontSize;
            const y = drops[i] * fontSize;
            
            // Gradient effect - brighter at the head
            const brightness = Math.random();
            if (brightness > 0.98) {
              ctx.fillStyle = '#ffffff';
            } else if (brightness > 0.9) {
              ctx.fillStyle = '#ff1744';
            } else {
              const opacity = Math.random() * 0.5 + 0.5;
              ctx.fillStyle = `rgba(220, 20, 60, ${opacity})`;
            }
            ctx.fillText(char, x, y);
            
            // Move drop down
            if (y > canvas.height && Math.random() > 0.975) {
              drops[i] = 0;
            }
            drops[i]++;
          }
        }

        requestAnimationFrame(draw);
      }

      // Start animation
      draw();
    });
  </script>

  <script is:inline type="module">
    // Hydrate and refresh scoreboard every 10 minutes (client-side)
    (() => {
      const TEAM_ID = '408704';
      const INTERVAL = 10 * 60 * 1000; // 10 minutes

      async function hydrate() {
        try {
          const res = await fetch(`/api/ctftime?teamId=${TEAM_ID}`);
          if (!res.ok) throw new Error('Network response was not ok');
          const data = await res.json();

          if (data?.colombiaRank) document.getElementById('colombiaRank').textContent = data.colombiaRank;
          if (data?.globalRank) document.getElementById('globalRank').textContent = data.globalRank;
          if (data?.rating) document.getElementById('rating').textContent = data.rating;
          if (data?.activeSince) document.getElementById('yearPoints').textContent = data.activeSince;

          // mark when the client last updated the values
          const now = new Date().toISOString();
          document.querySelectorAll('[id="colombiaRank"], [id="globalRank"], [id="rating"], [id="yearPoints"]').forEach(el => el.setAttribute('data-ctf-updated', now));
        } catch (err) {
          console.debug('CTFtime client hydrate failed:', err);
        }
      }

      // hydrate immediately (client) then every INTERVAL
      hydrate();
      setInterval(hydrate, INTERVAL);
    })();
  </script>

